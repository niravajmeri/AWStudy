<h4>Tasks 
  <%= link_to new_task_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Task
  <% end %>
</h4>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <!--<th>Attach1</th>
      <th>Attach2</th>
      <th>Attach3</th>
      <th>Attach4</th>
      <th>Attach5</th>-->
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <!--<td><%#= task.attach1 %></td>
        <td><%#= task.attach2 %></td>
        <td><%#= task.attach3 %></td>
        <td><%#= task.attach4 %></td>
        <td><%#= task.attach5 %></td>-->
        <td><%= link_to 'Show', task, class: 'btn btn-primary btn-xs'  %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-info btn-xs'  %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

