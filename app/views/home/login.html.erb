<h4>Login</h4>

<%= form_tag({controller: :home, action: :signin}, {class: 'form-horizontal'}) do %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= label_tag :mturk_id, nil, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= text_field_tag :mturk_id, nil, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= label_tag :password, nil, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= password_field_tag :password, nil, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= label_tag :email, nil, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= text_field_tag :email, nil, class: 'form-control' %>
    </div>
  </div>
  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Login", class: 'btn btn-default'  %>
    </div>
  </div>
<% end %>
